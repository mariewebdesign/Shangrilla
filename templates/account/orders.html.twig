{% extends 'base.html.twig' %}

{% block title %}Liste de mes commandes{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center">Mes commandes de menu</h1>
    <div class="bg-light p-5 my-5">

        <h2 class="h4">Retrouvez ici toutes vos commandes</h2>
    </div>

           {% for order in app.user.customer %}
                <div class="row border-bottom border-light mt-5">
            
                    <div class="col-8 mb-3">
                       
                        <p>Commande du {{order.createdat | date('d/m/y')}} : n° <strong>{{order.id}} </strong></p>
                        <p>Montant : {{order.amount}} &euro;</p>
                     
                        <p>Livraison prévue le {{order.date | date('d/m/y')}} à {{order.time}} </p>
                    
                    </div>
        
                </div>
            {% endfor %}

</div>


{% endblock %}