    {% set url=path('meal_single',{'slug':meal.slug}) %}

    <div class="col-md-6 p-1 mb-4">
            <div class="row card-body ">

                <div class="col">
                    <div class="card-img">
                        <img src="{{meal.coverImage}}" alt="photo de {{meal.title}}" class="img-fluid">
                    </div>
                </div>
                <div class="col text-left">
                    <div class="card-title">
                        <h5 >Menu {{meal.title}} </h5>
                    </div>
                    <div class="card-text pb-2 text-menu">
                        {{meal.introduction}}
                    </div>
                    <div class="card-text pb-2 text-menu">
                        {{meal.description}}
                    </div>
                    <div class="mb-2 h5">Prix : {{meal.price}} &euro;</div>
                    <div class="row ">
                        <div class="col-md-6 ">
                            <a href="{{ url }}" class="btn btn-primary btn-sm mb-1">+ d'infos</a>
                       
                            <a href="{{path('order_create',{'slug':meal.slug})}}" class="btn btn-warning btn-sm">Commander</a>
                        </div>
            
                    </div>

                    <div class="col mt-2 card-footer text-muted">
                            {% if meal.comments | length >0 %}
                                <span class="h6">{% include 'inc/rating.html.twig' with {'rating':meal.averageRatings } %} sur {{meal.comments|length}} avis.</span>
                            {% else %}
                                <span>Pas encore not√©.</span>
                            {% endif %}
                        </div>
                           
                </div>
            </div>              
    </div>

           