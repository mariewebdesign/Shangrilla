{% extends 'admin/base.html.twig' %}

{% block title %}Edition des commentaires{% endblock %}

{% form_theme form _self %}

{% block body %}

<main class="container-fluid mt-5">
    <h1 class="my-3 p-3 text-center">Modification du commentaires n°{{comment.id}}</h1>

    <div class="row mt-5"></div>

        <div class="col-8 offset-2 p-5 alert alert-info">
            <p>Menu lié : {{comment.meal.title}}</p>
            <p>Auteur : {{comment.meal.author.fullName}}</p>
            <p>Date de création : {{comment.createdat|date('d/m/Y H:i')}}</p>
            <p>Note donnée : {{comment.rating}}</p>
        </div>
        {{form_start(form)}}
        <div class="row">
            <div class="col-8 offset-2 px-5">
                <h4 >Modifier le commentaire ?</h4>
                {{form_start(form)}}
                {{form_widget(form)}}
                 <button type="submit" class="btn btn-info"><i class="fas fa-check"></i> Enregistrer</button>
                {{form_end(form)}}
            </div>
        </div>
    </div>
</main>
            
{% endblock %}



