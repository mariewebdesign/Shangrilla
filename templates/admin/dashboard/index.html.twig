{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}

<main class="container-fluid mt-5">


     <div class="row ">
        <div class="col ml-2">
            <div class="card bg-info text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-user fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title text-left"><a class="text-white" href="{{path('admin_users_list')}}">{{stats.users}} utilisateurs</a></h4>
                        </div>
                    </div>
                </div>
    
            </div>
   
        </div>
       
        <div class="col ml-2">
            <div class="card bg-warning text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-folder fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title text-left"><a class="text-white" href="{{path('admin_bookings_list')}}">{{stats.bookings}} r√©servations</a></h4>
                        </div>
                    </div>
                </div>
    
            </div>
        </div>
        <div class="col ml-2">
            <div class="card bg-warning text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-folder fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title text-left"><a class="text-white" href="{{path('admin_orders_list')}}">{{stats.orders}} commandes</a></h4>
                        </div>
                    </div>
                </div>
    
            </div>
        </div>
         <div class="col ml-2">
            <div class="card bg-success text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-hotel fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title text-left"><a class="text-white" href="{{path('admin_meals_list')}}">{{stats.meals}} menus</a></h4>
                        </div>
                    </div>
                </div>
    
            </div>
        </div>
        
        <div class="col ml-2 mr-2">
        <div class="card bg-success text-white text-center p-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <i class="fas fa-comment fa-3x"></i>
                        </div>
                        <div class="col-8 ">
                            <h4 class="card-title text-left"><a class="text-white " href="{{path('admin_comments_list')}}">{{stats.comments}} avis</a></h4>
                        </div>
                    </div>
                </div>
    
            </div>
        </div>  
           

    </div>
    <div class="row mt-4">
        <div class="col">
            <div class="alert alert-success my-3"> 
                <h4 class="alert-heading "> <i class="fas fa-arrow-up"></i> Menus les + populaires</h4>
            
 
                <table class="table table-hover">
                    <thead>
                        <th>Menu</th>
                        <th>Moyenne</th>
                    
                    </thead>
                    <tbody>
                        {% for meal in bestMeals %}
                        <tr>
                            <td>{{meal.title}}</td>
                            
                            <td>
                                <span class="badge badge-dark">
                                    {{meal.note|number_format(1,',','')}}
                                </span>
                            </td>
                          
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
             
        </div>
        <div class="col">
            <div class="alert alert-warning my-3"> 
                <h4 class="alert-heading"> <i class="fas fa-arrow-down"></i> Les pires menus</h4> 
         
    
                <table class="table table-hover">
                    <thead>
                        <th>Menu</th>
                        <th>Moyenne</th>
                    
                    </thead>
                    <tbody>
                       {% for meal in worstMeals %}
                        <tr>
                         
                            <td>{{meal.title}}</td>
                            <td>
                                <span class="badge badge-dark">
                                    {{meal.note|number_format(1,',','')}}
                                </span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
             
        </div>
    </div>
  


</main>
{% endblock %}
