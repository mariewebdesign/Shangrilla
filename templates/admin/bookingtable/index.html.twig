{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des réservation{% endblock %}

{% block body %}

<main class="container-fluid my-5">
    <h1 class="my-5">Gestion des réservations</h1>
    
    <table class="table table-over">
        <thead class="table-primary">
            <th>Id</th>
            <th>Date</th>
            <th>Visiteur</th>
            <th>Date de réservation</th>
            <th>Heure de réservation</th>
            <th>Nombre de personnes</th>

            <th></th>
            <th></th>
        </thead>
        <tbody>
           
            {% for booking in pagination.data %}
            <tr>
                <td>{{booking.id}}</td>
                <td>{{booking.createdAt|date('d/m/Y H:i')}}</td>
                <td>{{booking.users.fullName}}</td>
                <td>{{booking.date|date('d/m/Y H:i')}}</td>
                <td>{{booking.time}}</td>
                <td>{{booking.customers}}</td>
      
                <td>
                    <a href="{{path('admin_bookings_edit',{'id':booking.id})}}" class="btn btn-info btn-sm"><i class="fas fa-edit"></i></a>
                </td>
                <td>
                    <a href="{{path('admin_bookings_delete',{'id':booking.id})}}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ pagination.display() }}

</main>

{% endblock %}